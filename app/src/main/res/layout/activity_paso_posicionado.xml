<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PasoPosicionado_Activity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1565C0"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnRegresarPosicionado"
                android:src="@drawable/regresar_icono_64x64"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POSICIONA VEHÍCULO"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- INFORMACIÓN DEL VEHÍCULO -->
        <LinearLayout
            android:id="@+id/layoutInfoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. INFORMACIÓN DEL VEHÍCULO"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvVinVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/tvBlVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMarcaModeloAnnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvColorExterior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvColorInteriorVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF6F00"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- FORMULARIO DE POSICIONADO -->
        <LinearLayout
            android:id="@+id/layoutFormularioPosicionado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. DATOS DE POSICIONADO"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bloque:"
                    android:textSize="16sp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/spinnerBloque"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_border" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeleccionaPosicionTablero"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnSeleccionaPosicionPosicionado"
                    android:textStyle="bold"
                    android:text="Selecciona Posición"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSeleccionaPosicionSpinner"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posicion:"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"/>

                <Spinner
                    android:layout_weight="1"
                    android:id="@+id/spinnerPosicion"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_border"/>
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:background="@color/deep_blue"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal que lo manejará:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerPersonal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvEmpleadoReceptor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empleado receptor: [Se llenará automáticamente]"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvFechaMovimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de movimiento: [Se llenará automáticamente]"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />
            <View
                android:layout_marginTop="10dp"
                android:background="@color/deep_blue"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnGuardarPosicionado"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="GUARDAR"
                android:backgroundTint="#FF6F00"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- OVERLAY DE CARGA -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="24dp"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                style="?android:attr/progressBarStyleLarge"
                android:indeterminateTint="#1565C0" />

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Consultando vehículo..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0" />

            <TextView
                android:id="@+id/tvLoadingSubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Verificando información en base de datos"
                android:textSize="12sp"
                android:textColor="#37474F" />

        </LinearLayout>

        <!-- MENSAJE DE ERROR -->
        <LinearLayout
            android:id="@+id/layoutError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHÍCULO NO VÁLIDO PARA POSICIONADO"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvMensajeError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El vehículo no existe o no tiene un status válido para posicionado."
                android:textSize="14sp"
                android:textColor="#37474F"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>