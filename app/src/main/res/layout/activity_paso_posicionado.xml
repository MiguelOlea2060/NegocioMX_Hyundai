<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PasoPosicionado_Activity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1565C0"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POSICIONADO DE VEHÍCULOS"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- SECCIÓN ESCANEO VIN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. ESCANEAR O INGRESAR VIN"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etVIN"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Escanear o escribir VIN del vehículo"
                android:inputType="textCapCharacters"
                android:maxLength="17"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnConsultarVehiculo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="CONSULTAR VEHÍCULO"
                android:backgroundTint="#1565C0"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- INFORMACIÓN DEL VEHÍCULO -->
        <LinearLayout
            android:id="@+id/layoutInfoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. INFORMACIÓN DEL VEHÍCULO"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvBlVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMarcaModeloAnnio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvColorExterior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvStatusActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF6F00"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- FORMULARIO DE POSICIONADO -->
        <LinearLayout
            android:id="@+id/layoutFormularioPosicionado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. DATOS DE POSICIONADO"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bloque:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerBloque"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posición:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerPosicion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de movimiento:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerTipoMovimiento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal que lo manejará:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerPersonal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvEmpleadoReceptor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empleado receptor: [Se llenará automáticamente]"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvFechaMovimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de movimiento: [Se llenará automáticamente]"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnGuardarPosicionado"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="GUARDAR POSICIONADO"
                android:backgroundTint="#FF6F00"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- OVERLAY DE CARGA -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="24dp"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                style="?android:attr/progressBarStyleLarge"
                android:indeterminateTint="#1565C0" />

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Consultando vehículo..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0" />

            <TextView
                android:id="@+id/tvLoadingSubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Verificando información en base de datos"
                android:textSize="12sp"
                android:textColor="#37474F" />

        </LinearLayout>

        <!-- MENSAJE DE ERROR -->
        <LinearLayout
            android:id="@+id/layoutError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHÍCULO NO VÁLIDO PARA POSICIONADO"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvMensajeError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El vehículo no existe o no tiene un status válido para posicionado."
                android:textSize="14sp"
                android:textColor="#37474F"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>