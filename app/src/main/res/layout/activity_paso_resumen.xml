<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PasoResumen_Activity">

    <!-- ScrollView principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESUMEN DEL VEHÍCULO"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Sección: Escaneo/Ingreso de VIN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/border_layout"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESCANEAR O INGRESAR VIN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etVinResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese VIN del vehículo"
                    android:inputType="textCapCharacters"
                    android:maxLength="17"
                    android:padding="12dp"
                    android:background="@drawable/border_edittext"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnEscanearQRResumen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ESCANEAR QR"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#1976D2"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnConsultarResumen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CONSULTAR"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#2E7D32"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Mensaje de Error -->
            <LinearLayout
                android:id="@+id/layoutErrorResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFEBEE"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvMensajeErrorResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Error"
                    android:textSize="14sp"
                    android:textColor="#C62828"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Sección: Datos del Vehículo -->
            <LinearLayout
                android:id="@+id/layoutInfoVehiculoResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/border_layout"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATOS DEL VEHÍCULO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvVinResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIN: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvBlResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BL: "
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvMarcaModeloResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marca Modelo - Año"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvColorExteriorResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color Ext: "
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvColorInteriorResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color Int: "
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvNumeroMotorResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motor: "
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <!-- Días de Estadía -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:id="@+id/tvDiasEstadiaResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estadía: "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F" />

            </LinearLayout>

            <!-- Sección: Status Actual y Resumen -->
            <LinearLayout
                android:id="@+id/layoutStatusResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/border_layout"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STATUS ACTUAL"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvStatusActualResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POSICIONADO"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="16dp" />

                <!-- Entrada -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Entrada:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#424242" />

                    <TextView
                        android:id="@+id/tvFechaEntradaResumen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="01/01/2024 14:30"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                </LinearLayout>

                <!-- Salida -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Salida:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#424242" />

                    <TextView
                        android:id="@+id/tvFechaSalidaResumen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="—"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                </LinearLayout>

                <!-- Movimientos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Movimientos:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#424242" />

                    <TextView
                        android:id="@+id/tvTotalMovimientosResumen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                </LinearLayout>

            </LinearLayout>

            <!-- Sección: Tracking de Movimientos -->
            <LinearLayout
                android:id="@+id/layoutTrackingResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/border_layout"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HISTORIAL DE MOVIMIENTOS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTrackingMovimientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <!-- Botón Regresar -->
            <Button
                android:id="@+id/btnRegresarResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGRESAR"
                android:textColor="#FFFFFF"
                android:backgroundTint="#757575"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Overlay de Carga (Progress) -->
    <FrameLayout
        android:id="@+id/progressOverlayResumen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/border_layout">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:indeterminateTint="#1976D2" />

            <TextView
                android:id="@+id/tvLoadingTextResumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Cargando..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>