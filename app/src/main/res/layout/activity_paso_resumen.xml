<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PasoResumen_Activity">

    <LinearLayout
        android:id="@+id/mainResumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1565C0"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:src="@drawable/regresar_icono_64x64"
            android:id="@+id/btnRegresarResumen"
            android:layout_width="48dp"
            android:layout_height="48dp">

        </ImageView>
        <!-- HEADER -->
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen de Vehiculo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="18dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš— Escanea el Codigo QR"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etVinResumen"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Ingrese VIN del vehÃ­culo"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:maxLength="19"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnConsultarResumen"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="ðŸ”"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- INFORMACIÃ“N DEL VEHÃCULO -->
        <LinearLayout
            android:id="@+id/layoutInfoVehiculoResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#C8E6C9"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Datos del VehÃ­culo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvBlResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBL: -"
                android:textSize="16sp"
                android:textColor="#1B5E20"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMarcaModeloResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- M9, 0"
                android:textSize="14sp"
                android:textColor="#1B5E20"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvColorExteriorResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color Ext.: -"
                android:textSize="14sp"
                android:textColor="#1B5E20"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvColorInteriorResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color Int.: -"
                android:textSize="14sp"
                android:textColor="#1B5E20"
                android:layout_marginBottom="4dp" />

            <View
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#1B5E20"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/tvDiasEstadiaResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 dÃ­as"
                android:textSize="16sp"
                android:textColor="#1B5E20"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Status Actual -->
        <LinearLayout
            android:id="@+id/layoutStatusResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Actual: "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF6F00"/>

                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/tvStatusActualResumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posicionado, Col.: 4, Fila: 5"
                    android:textSize="18sp"
                    android:textColor="#424242"/>

                <TextView
                    android:id="@+id/tvFechaMovimientoResumen"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="10/09/2025 09:20"
                    android:textSize="16sp"
                    android:textColor="#424242"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrada:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

                <TextView
                    android:id="@+id/tvFechaEntradaResumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  01/SEP/2025 10:00"
                    android:textSize="14sp"
                    android:textColor="#424242" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salida:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

                <TextView
                    android:id="@+id/tvFechaSalidaResumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  15/SEP/2025 10:30"
                    android:textSize="14sp"
                    android:textColor="#424242" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movimientos:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

                <TextView
                    android:id="@+id/tvTotalMovimientosResumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  4"
                    android:textSize="14sp"
                    android:textColor="#424242" />

            </LinearLayout>

        </LinearLayout>

        <!-- Tracking -->
        <LinearLayout
            android:id="@+id/layoutTrackingResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡ Tracking"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF6F00"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTrackingMovimientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Loading -->
        <LinearLayout
            android:id="@+id/progressOverlayResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                style="?android:attr/progressBarStyleLarge"
                android:indeterminateTint="#2196F3" />

            <TextView
                android:id="@+id/tvLoadingTextResumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Consultando vehÃ­culo..."
                android:textSize="16sp"
                android:textColor="#2196F3" />

        </LinearLayout>


        <!-- MENSAJE DE ERROR -->
        <LinearLayout
            android:id="@+id/layoutErrorResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHÃCULO NO VÃLIDO PARA POSICIONADO"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvMensajeErrorResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El vehÃ­culo no existe o no tiene un status vÃ¡lido para posicionado."
                android:textColor="#C62828"
                android:textSize="14sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>