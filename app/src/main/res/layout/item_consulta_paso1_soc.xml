<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="10dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Header con VIN y BL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvVIN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VIN: XXXXXXXXXXXXX"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1976D2" />

            <TextView

                android:textStyle="bold"
                android:id="@+id/tvBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BL: XXXX"
                android:textSize="14sp"
                android:textColor="#666666"
                android:background="@drawable/edittext_background"
                android:padding="2dp" />

        </LinearLayout>

        <!-- Información del Vehículo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvMarcaModelo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Marca Modelo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#424242" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvAnio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Año: 2024"
                android:textSize="16sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Colores -->
        <TextView
            android:id="@+id/tvColores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colores -> Ext: Color | Int: Color"
            android:textSize="14sp"
            android:textColor="@color/azul_medio"
            android:layout_marginBottom="2dp" />

        <!-- Número de Motor -->
        <TextView
            android:id="@+id/tvNumeroMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero de Motor: XXXXXXXXX"
            android:textSize="14sp"
            android:textColor="@color/azul_medio"
            android:layout_marginBottom="6dp" />

        <!-- Datos SOC -->
        <TextView
            android:id="@+id/tvDatosPasoLogVehiculoDet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status actual: 0 km | Batería: 0% | Modo Transporte: No | Se Recarga: No"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/rojo"
            android:background="@color/azul_cielo"
            android:padding="3dp"
            android:layout_marginBottom="8dp" />

        <!-- Footer con fotos y fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Status(s)"
                android:textSize="14sp"
                android:textColor="@color/azul_fuerte"
                android:background="#F3E5F5"
                android:padding="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01 12:00:00"
                android:textSize="14sp"
                android:textColor="@color/azul_fuerte" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
