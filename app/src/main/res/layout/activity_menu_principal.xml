<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu_principal_activity">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgFotoEncabezado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_glovis" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAltaArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Articulo" />

        <Button
            android:id="@+id/btnConsultaArticulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Consulta Articulo" />

        <Button
            android:layout_marginRight="15dp"
            android:id="@+id/btnCliente"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnUM"
            android:layout_gravity="left"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uni. de Medida" />

        <Button
            android:layout_gravity="right"
            android:id="@+id/btnCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria" />

        <Button
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:id="@+id/btnImpuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Impuesto" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTipoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo pago" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnSincronizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sincronización" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEmpresas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresas" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnConfiguraciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configs" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnRadminVPN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Radmin VPN" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POS" />

        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/btnVentas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ventas" />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehículo" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:padding="5dp"
        android:background="@color/naranja"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="Opciones"
            android:textSize="22dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:layout_gravity="top"
            android:id="@+id/imgLoginLogoutMenuPrincipal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/logout_icono_64x64" />
    </LinearLayout>

    <View
        android:id="@+id/linea1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/deep_blue"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </View>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/movimientos_64px"
                android:id="@+id/imgMenuMovimientos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>
            <Button
                android:layout_weight="1"
                android:id="@+id/btnMenuMovimientoPasoLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Movimiento " />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/menu_consulta_40px"
                android:id="@+id/img_menu_consultas_movimientos"
                android:layout_width="64dp"
                android:layout_height="wrap_content">

            </ImageView>

            <Button
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:id="@+id/btnConsultaMovimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Consulta " />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/menu_adminusers_4px"
                android:id="@+id/imgMenuAdminUsers"
                android:layout_width="64dp"
                android:layout_height="wrap_content">
            </ImageView>

            <Button
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/btnUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuarios" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/linea2"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/deep_blue"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </View>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPaso2Accesorios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 2 - Accesorios" />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnConsultaPaso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta" />

    </LinearLayout>

    <View
        android:id="@+id/linea3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/deep_blue"
        android:layout_width="match_parent"
        android:layout_height="2dp">
    </View>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPaso3Repuve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paso 3 - Repuve" />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnConsultaPaso3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta" />

    </LinearLayout>



</LinearLayout>