<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PasoEntrada_Activity">

    <LinearLayout
        android:id="@+id/mainEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1565C0"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/btnRegresarEntrada"
                android:src="@drawable/regresar_icono_64x64"
                android:layout_width="48dp"
                android:layout_height="48dp">

            </ImageView>
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ENTRADA DE VEHÍCULO "
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- INFORMACIÓN DEL VEHÍCULO -->
        <LinearLayout
            android:id="@+id/layoutInfoVehiculoEntrada"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" INFORMACIÓN DEL VEHÍCULO "
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvVinVehiculoEntrada"
                android:background="@drawable/edittext_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vin: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/tvBlVehiculoEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BL: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMarcaModeloAnnioEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca:    Modelo:     Año: "
                android:textSize="14sp"
                android:textColor="#37474F"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvColorExteriorEntrada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Color Ext: "
                    android:textSize="14sp"
                    android:textColor="#37474F" />

                <TextView
                    android:id="@+id/tvColorInteriorVehiculoEntrada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Color Int: "
                    android:textSize="14sp"
                    android:textColor="#37474F" />


            </LinearLayout>

        </LinearLayout>

        <!-- FORMULARIO DE Salida -->
        <LinearLayout
            android:id="@+id/layoutFormularioEntrada"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" DATOS DE LA ENTRADA "
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <View
                android:layout_marginTop="10dp"
                android:background="@color/deep_blue"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnInspeccionar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text=" Inspeccionar"
                android:backgroundTint="#FF6F00"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvFotosCapturadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotos de inspección: 0/5"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Entrada:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgTipoEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rbRodandoEntrada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rodando"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbEnMadrinaEntrada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="En Madrina" />

            </RadioGroup>

            <!-- CAMPOS PARA RODANDO -->
            <LinearLayout
                android:id="@+id/layoutRodandoEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empresa transportista:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerEmpresaRodandoEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

            <!-- CAMPOS PARA EN MADRINA -->
            <LinearLayout
                android:id="@+id/layoutEnMadrinaEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empresa transportista:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerEmpresaMadrinaEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conductor:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerConductorEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblPlacaPaso1EntradaEntrada"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="Placa:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <Spinner
                        android:id="@+id/spinnerPlacaTransporteEntrada"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_border"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="# Economico:"
                        android:id="@+id/lblNumEconomicoPaso1Entrada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/etNumeroEconomicoEntrada"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:hint="Número económico"
                        android:background="@drawable/edittext_border"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvEmpleadoReceptorEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Empleado receptor: "
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvFechaMovimientoEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Fecha de entrada: "
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />
            <View
                android:layout_marginTop="10dp"
                android:background="@color/deep_blue"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnGuardarEntrada"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="GUARDAR"
                android:backgroundTint="#FF6F00"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- OVERLAY DE CARGA -->
        <LinearLayout
            android:id="@+id/loadingContainerEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="24dp"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/progressBarEntrada"
                android:layout_width="60dp"
                android:layout_height="60dp"
                style="?android:attr/progressBarStyleLarge"
                android:indeterminateTint="#1565C0" />

            <TextView
                android:id="@+id/tvLoadingTextEntrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Procesando..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0" />

            <TextView
                android:id="@+id/tvLoadingSubtextEntrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Verificando información "
                android:textSize="14sp"
                android:textColor="#37474F" />

        </LinearLayout>

        <!-- MENSAJE DE ERROR -->
        <LinearLayout
            android:id="@+id/layoutErrorEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VEHÍCULO NO VÁLIDO PARA ENTRADA"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvMensajeErrorEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El vehículo no existe o no tiene un status válido para entrada."
                android:textColor="#C62828"
                android:textSize="14sp"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>