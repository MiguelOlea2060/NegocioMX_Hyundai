<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".PasoTaller_Activity">

    <LinearLayout
        android:id="@+id/mainTaller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1565C0"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/btnRegresarPasoTaller"
                    android:src="@drawable/regresar_icono_64x64"
                    android:layout_width="48dp"
                    android:layout_height="48dp">
                </ImageView>


                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTRO EN TALLER"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

        </LinearLayout>

        <!-- INFORMACIÃ“N DEL VEHÃCULO -->
        <LinearLayout
            android:id="@+id/layoutInfoVehiculoTaller"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INFORMACIÃ“N DEL VEHÃCULO"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvVinVehiculoTaller"
                android:background="@drawable/edittext_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vin: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:id="@+id/tvBlVehiculoTaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BL: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginBottom="4dp"
                />

            <TextView
                android:id="@+id/tvMarcaModeloAnnioTaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marca:    Modelo:     AÃ±o: "
                android:textSize="14sp"
                android:textColor="#37474F"
                android:layout_marginBottom="4dp"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvColorExteriorTaller"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Color Ext: "
                    android:textSize="14sp"
                    android:textColor="#37474F"
                    />

                <TextView
                    android:id="@+id/tvColorInteriorTaller"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Color Int: "
                    android:textSize="14sp"
                    android:textColor="#37474F"
                   />

            </LinearLayout>


    </LinearLayout>

        <!-- FORMULARIO DE TALLER -->
        <LinearLayout
            android:id="@+id/layoutFormularioTaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATOS DE TALLER"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Personal que harÃ¡ el movimiento -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal que harÃ¡ el movimiento *"
                android:textSize="14sp"
                android:textColor="#37474F"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerPersonalMovimientoTaller"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_border"
                android:layout_marginBottom="16dp" />

            <!-- Tipo de reparaciÃ³n -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de reparaciÃ³n *"
                android:textSize="14sp"
                android:textColor="#37474F"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupTipoReparacionTaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioEnSitioTaller"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="En sitio"
                    android:textColor="#37474F"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioForaneaTaller"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ForÃ¡nea"
                    android:textColor="#37474F" />

            </RadioGroup>

            <!-- Empresa externa (solo para ForÃ¡nea) -->
            <LinearLayout
                android:id="@+id/layoutEmpresaExternaTaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empresa externa *"
                    android:textSize="14sp"
                    android:textColor="#37474F"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerEmpresaExternaTaller"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Empresa interna (solo para En sitio) -->
            <LinearLayout
                android:id="@+id/layoutEmpresaInternaTaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empresa que realizarÃ¡ la reparaciÃ³n *"
                    android:textSize="14sp"
                    android:textColor="#37474F"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerEmpresaInternaTaller"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Persona que realizarÃ¡ el trabajo *"
                    android:textSize="14sp"
                    android:textColor="#37474F"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerPersonaReparacionTaller"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_border"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Fecha de inicio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de inicio de la reparaciÃ³n *"
                android:textSize="14sp"
                android:textColor="#37474F"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvFechaInicioTaller"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="2024-01-15 14:30"
                    android:textSize="16sp"
                    android:textColor="#37474F"
                    android:background="@drawable/edittext_border"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnSeleccionarFechaTaller"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="ðŸ“…"
                    android:textSize="18sp"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- SELECCIÃ“N DE PARTES DAÃ‘ADAS -->
        <LinearLayout
            android:id="@+id/layoutPartesDanadasTaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PARTE A REPARAR *"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- NavegaciÃ³n de pÃ¡ginas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnPaginaAnteriorTaller"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="â—€"
                    android:textSize="16sp"
                    android:backgroundTint="#757575"
                    android:textColor="@color/azul_fuerte"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/tvPaginaActualTaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PÃ¡gina 1 de 3"
                    android:textSize="16sp"
                    android:textColor="@color/azul_fuerte"
                    android:layout_marginHorizontal="16dp" />

                <Button
                    android:id="@+id/btnPaginaSiguienteTaller"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="â–¶"
                    android:textSize="16sp"
                    android:backgroundTint="#1565C0"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Container para las partes (se llenarÃ¡ dinÃ¡micamente) -->
            <LinearLayout
                android:id="@+id/containerPartesTaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- DESCRIPCIÃ“N DETALLADA -->
        <LinearLayout
            android:id="@+id/layoutDescripcionTaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPCIÃ“N DETALLADA"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etDescripcionTaller"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/edittext_border"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="5"
                android:hint="Describe detalladamente el trabajo a realizar..."
                android:textSize="14sp"
                android:textColor="#37474F" />

        </LinearLayout>

        <!-- BOTONES DE ACCIÃ“N -->
        <LinearLayout
            android:id="@+id/layoutBotonesTaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnLimpiarTaller"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="LIMPIAR"
                android:backgroundTint="#757575"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnGuardarTaller"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="GUARDAR"
                android:backgroundTint="#FF6F00"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- OVERLAY DE CARGA -->
        <LinearLayout
            android:id="@+id/loadingContainerTaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="24dp"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/progressBarTaller"
                android:layout_width="60dp"
                android:layout_height="60dp"
                style="?android:attr/progressBarStyleLarge"
                android:indeterminateTint="#1565C0" />

            <TextView
                android:id="@+id/tvLoadingTextTaller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Procesando..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1565C0" />

        </LinearLayout>

        <!-- MENSAJE DE ERROR -->
        <LinearLayout
            android:id="@+id/layoutErrorTaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEBEE"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvErrorTaller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error: No se pudo procesar la solicitud"
                android:textColor="#C62828"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>