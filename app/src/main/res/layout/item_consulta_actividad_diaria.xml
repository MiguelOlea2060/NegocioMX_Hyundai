<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con VIN y Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvVIN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VIN: KMHJ281GPMU123456"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1565C0" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENTRADA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/edittext_border"
                android:padding="4dp"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- Información del vehículo -->
        <TextView
            android:id="@+id/tvVehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HYUNDAI ACCENT 2023"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:layout_marginBottom="4dp" />

        <!-- Fecha y hora -->
        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024-01-15 14:30"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- Usuario -->
        <TextView
            android:id="@+id/tvUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario: Juan Pérez"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- Detalles específicos -->
        <TextView
            android:id="@+id/tvDetalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bloque: A, Pos: 15-3"
            android:textSize="12sp"
            android:textColor="#37474F"
            android:textStyle="italic" />

    </LinearLayout>

</androidx.cardview.widget.CardView>