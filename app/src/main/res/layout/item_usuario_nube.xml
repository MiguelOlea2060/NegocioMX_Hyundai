<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/blue_white_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/lblNombreCompletoUsuarioNube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre Completo"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="22dp" />

                <ImageView
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:id="@+id/imgEditaUsuarioNube"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/editar_icono_64x64" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/imgActivoUsuarioNube"
                    android:layout_gravity="center_vertical"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/icono_on_50x24" />

                <TextView
                    android:textFontWeight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/lblEmailUsuarioNube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email de Usuario"
                    android:layout_weight="1"
                    android:textSize="18sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:id="@+id/imgVerificadoUsuarioNube"
                        android:layout_gravity="center_vertical"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        app:srcCompat="@drawable/icono_off_50x24" />
                    <TextView
                        android:layout_marginRight="2dp"
                        android:id="@+id/lblVerificadoUsuarioNube"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verificado "
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingBottom="4dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/lblEmpresaUsuarioNube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empresa a que pertenece"
                    android:layout_weight="1"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>